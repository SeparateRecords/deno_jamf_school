{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "newLineKind": "lf",
  "typescript": {
    "deno": true,
    "lineWidth": 88,
    "useTabs": true,
    "ignoreFileCommentText": "dprint-ignore-file",
    "ignoreNodeCommentText": "dprint-ignore"
  },
  "json": {
    "deno": true,
    "useTabs": false,
    "ignoreNodeCommentText": "dprint-ignore"
  },
  "markdown": {
    "deno": true,
    "lineWidth": 88,
    "ignoreDirective": "dprint-ignore",
    "ignoreFileDirective": "dprint-ignore-file",
    "ignoreStartDirective": "dprint-ignore-start",
    "ignoreEndDirective": "dprint-ignore-end"
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,cjs,mjs,json,md}"
  ],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.50.2.wasm",
    "https://plugins.dprint.dev/json-0.12.3.wasm",
    "https://plugins.dprint.dev/markdown-0.9.4.wasm"
  ]
}
